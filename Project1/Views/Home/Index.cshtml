@model Project1.Models.User

@{
    ViewBag.Title = "Home";
}

<div class="container">
    <h2 class="text-center">Welcome @Model.Username</h2>
    <div class="row">
        <div class="col-md-4">
            <img src="@Url.Content(Model.ProfileImage)" alt="Profile Image" class=" img-thumbnail" />
        </div>
        <div class="col-md-8">
            <table class="table table-striped">
                <tr>
                    <th>UserName</th>
                    <td>@Model.Username</td>
                </tr>
                <tr>
                    <th>Mobile Number</th>
                    <td>@Model.MobileNumber</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>@Model.Email</td>
                </tr>
            </table>
        </div>
    </div>
    <a href="@Url.Action("EditProfile", "Home")" class="mt-5 btn btn-primary">Edit Profile</a>
</div>
