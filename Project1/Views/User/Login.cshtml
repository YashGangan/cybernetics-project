@model Project1.ViewModels.LoginViewModel

@{
    ViewBag.Title = "Login";
}

<div class="container">
    <h2>Login</h2>
    <form action="/user/login" method="post" enctype="multipart/form-data" class="form-horizontal">
        @Html.AntiForgeryToken()
        <div class="form-group">
            <label for="EmailOrMobile" class="control-label col-md-2">Enter your Email or Mobile</label>
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.EmailOrMobile, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.EmailOrMobile, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Password, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-primary">Login</button>
            </div>
        </div>
        <div class="col-md-10">
            @if(ViewBag.Message != null)
            {
                <span class="text-danger">@ViewBag.Message</span>
            }
        </div>
    </form>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
